<%- include ('../partials/header.ejs') %>
<%- include ('../partials/navbar-users.ejs') %>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h3>Categories</h3>
        </div>
        <div class="card-body">
            <table class='table table-bordered'>
                <tread>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Slug</th>
                    </tr>
                </tread>
                <tbody>

                    <% categories.forEach( category => { %>
                    <tr>
                        <td><%= category.id %></td>
                        <td><a href='/categories/<%= category.slug %>'><%= category.title %></a></td>
                        <td><%= category.slug %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <button class="btn btn-success btn-block" onclick='window.history.back()'>Back</button>
        </div>
    </div>
</div>

<%- include ('../partials/footer.ejs') %>