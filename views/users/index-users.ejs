<%- include ('../partials/header.ejs') %>
<%- include ('../partials/navbar-users.ejs') %>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h3>Articles</h3>
        </div>
        <div class="card-body">
            <table class='table table-bordered'>
                <tread>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Slug</th>
                        <th>Category</th>
                    </tr>
                </tread>
                <tbody>

                    <% articles.forEach( article => { %>
                    <tr>
                        <td><%= article.id %></td>
                        <td><a href='/<%= article.slug %>'><%= article.title %></a></td>
                        <td><%= article.slug %></td>
                        <td><%= article.category.title %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include ('../partials/footer.ejs') %>