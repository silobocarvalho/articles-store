<%- include ('../../partials/header.ejs') %>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h3>Log in</h3>
        </div>
        <div class="card-body">
            <form action="/login" method="POST">
                <h3><label for="email" class='badge badge-info'>Email: </label> </h3>
                <input type="email" class='form-control' name='email' placeholder="email@mail.com"> <br>
                <h3><label for="password" class='badge badge-info'>Password: </label> </h3>
                <input type="password" class='form-control' name='password' id='password' placeholder="Put your password here..."> <br>
                <button class="btn btn-success" >Log in</button>
            </form>
        </div>
    </div>
</div>

