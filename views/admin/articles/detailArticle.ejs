<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar-admin.ejs') %>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h3>Article</h3>
        </div>
        <div class="card-body">
                <h3><label for="title" class='badge badge-info'>Title: </label> </h3>
                <input type="text" class='form-control' name='title' value='<%= article.title %>' disabled> <br>
                <h3><label for="category" class='badge badge-info'>Category: </label> </h3>
                <select name="categoryid" class='form-control' disabled> 
                        <option> <%= article.category.title %> </option>
                </select>
                <br>
                <h3><label for="content" class='badge badge-info'>Content: </label> </h3>
                <textarea name="content" id="content" disabled><%= article.content %> </textarea>
            </form>
            <br>
            <button class="btn btn-success btn-block" onclick='window.history.back()'>Back</button>
        </div>
    </div>
</div>

<%- include ('../../partials/footer.ejs') %>

<script src='/tinyMCE/tinymce.min.js'></script>
<script>
    tinymce.init({
        selector: '#content',
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ],
        readonly: 1
    })
</script>